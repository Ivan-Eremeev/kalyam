block content
	include blocks/card-recom.pug

	.page

		include blocks/header.pug
		
		.content

			// order
			.order
				.wrapper
					h1.order__title Оформление заказа
					.order__row 
						.order__col1

							form(action="#").order__block 
								h2.order__subtitle Личные данные получателя заказа
								.order__input 
									input(type="text" placeholder="ФИО")
								.order__input
									input(type="tel" placeholder="Номер телефона").mask-tel

							form(action="#").order__block 
								h2.order__subtitle Выберите способ получения товара
								.order__select.js-select
									.order__trigger.js-drop-btn(data-drop="select1")
										span Самовывоз
									.order__drop#select1
										ul.order__list 
											li.hide
												input#delivery_1(type="radio" name="delivery" checked)
												label(for="delivery_1") Самовывоз
											li 
												input#delivery_2(type="radio" name="delivery")
												label(for="delivery_2") Отправка курьером
											li 
												input#delivery_3(type="radio" name="delivery")
												label(for="delivery_3") Доставка до ТК
											li 
												input#delivery_4(type="radio" name="delivery")
												label(for="delivery_4") Доставка от магазина

							form(action="#").order__block 
								h2.order__subtitle Выберите дату и время самовывоза
								.order__input.order__input--select
									input(type="text" placeholder="Выбрать день" autocomplete="off")#datepicker
								.order__select.js-select-nohide
									.order__trigger.js-drop-btn(data-drop="select2")
										span Выбрать время
									.order__drop#select2
										ul.order__list 
											li
												input#time_1(type="radio" name="time")
												label(for="time_1") 8.00-10.00
											li 
												input#time_2(type="radio" name="time")
												label(for="time_2") 10.00-12.00
											li 
												input#time_3(type="radio" name="time")
												label(for="time_3") 13.00-15.00
											li 
												input#time_4(type="radio" name="time")
												label(for="time_4") 15.00-18.00
											li 
												input#time_5(type="radio" name="time")
												label(for="time_5") 18.00-20.00

							form(action="#").order__block 
								h2.order__subtitle Выберите способ оплаты
								.order__select.js-select
									.order__trigger.js-drop-btn(data-drop="select3")
										span Наличными при получении
									.order__drop#select3
										ul.order__list 
											li.hide
												input#pay_1(type="radio" name="pay" checked)
												label(for="pay_1") Наличными при получении
											li 
												input#pay_2(type="radio" name="pay")
												label(for="pay_2") Картой онлайн
											li 
												input#pay_3(type="radio" name="pay")
												label(for="pay_3") Оплата по расчётному счёту
											li 
												input#pay_4(type="radio" name="pay")
												label(for="pay_4") Переводом на карту

							form(action="#").order__block 
								h2.order__subtitle Комментарии к заказу
								.order__textarea 
									textarea(placeholder="Ваш комментарий")

						.order__col2

							form(action="#").order__block.order__block--sticky
								h2.order__subtitle Информация о заказе:
								.order__text 
									p Телефон: +7 900 323 90 10
									p Получатель: Григорьев Александр Павлович   
									p Способ получения: самовывоз
									p Дата самовывоза: 12 июля 2021
									p Время самовывоза: 10.00-12.00
									p Способ оплаты: наличными при получении
									p Стоимость: 1000р
									p Скидка: 0%
									p Стоимость доставки: 200р
								.order__result Итого: 1200 рублей
								button(type="submit").btn Оплатить заказ
			//	/order
			
		include blocks/footer.pug

